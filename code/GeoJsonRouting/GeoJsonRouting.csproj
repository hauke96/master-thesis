<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <RootNamespace>GeoJsonRouting</RootNamespace>
        <TargetFramework>net7.0</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Mars.Components" Version="4.3.1-beta-3" />
      <PackageReference Include="Mars.Interfaces" Version="4.3.1-beta-3" />
      <PackageReference Include="NetTopologySuite" Version="2.5.0" />
    </ItemGroup>

    <ItemGroup>
      <Content Include="Resources\obstacles.geojson">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
      <None Remove="config.json" />
      <Content Include="config.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
      <None Remove="Resources\obstacles.geojson" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Wavefront\Wavefront.csproj" />
    </ItemGroup>

</Project>
